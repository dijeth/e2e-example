{
  "include": ["playwright.config.*", "e2e/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "strictPropertyInitialization": false,
    "target": "ES2021",
    "types": ["node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6"
    }
  }
}
